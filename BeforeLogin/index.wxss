/* components/BeforeLogin/index.wxss */

.container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
    z-index: 10;
}

.hidden{
    display: none;
}

.content {
    position: relative;
    width: 560rpx;
    height: 640rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 50% auto 0 auto;
    padding: 70rpx 0 0 0;
    box-sizing: border-box;
}

.title {
    font-size: 34rpx;
    color: #333;
    line-height: 50rpx;
    text-align: center;
    font-weight: 600;
}

.label {
    text-align: center;
    font-size: 26rpx;
    color: #999;
    line-height: 44rpx;
    margin-bottom: 47rpx;
    box-sizing: border-box;
}

.login-img {
    width: 270rpx;
    height: 279rpx;
    margin-left: 120rpx;
}

.btns {
    position: absolute;
    bottom: 56rpx;
}

.btn {
    width: 216rpx;
    height: 80rpx;
    border-radius: 50rpx;
    display: inline-block;
    margin-left: 42rpx;
    line-height: 80rpx;
    text-align: center;
    vertical-align: middle;
}

.btn1 {
    color: #f44e4b;
    border: 1rpx solid #f44e4b;
    padding-left: 1rpx;
    line-height: 78rpx;
    height: 78rpx;
}

.btn2 {
    color: #fff;
    background-color: #f44e4b;
}
